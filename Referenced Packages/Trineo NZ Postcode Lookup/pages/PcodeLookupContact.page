<apex:page standardController="Contact" extensions="nzpcode.PcodeLookupContact">
<script type="text/javascript"> 


function copyRadioValueShipping(value){
 var x = document.getElementById("j_id0:j_id2:selectedIndexShipping");
 x.value = value;
}
function copyRadioValueBilling(value){
 var x = document.getElementById("j_id0:j_id2:selectedIndexBilling");
 x.value = value;
}

</script>

<apex:form >
<apex:inputHidden value="{!Contact.OtherStreet}"/>
<apex:inputHidden value="{!Contact.OtherCity}"/>
<apex:inputHidden value="{!Contact.OtherPostalCode}"/>
<apex:inputHidden value="{!Contact.MailingStreet}"/>
<apex:inputHidden value="{!Contact.MailingCity}"/>
<apex:inputHidden value="{!Contact.MailingPostalCode}"/>
<apex:inputHidden value="{!selectedIndexShipping}" id="selectedIndexShipping" />
<apex:inputHidden value="{!selectedIndexBilling}"  id="selectedIndexBilling" />


<apex:pageBlock title="Postcode Lookup Results">
    <apex:pageBlockButtons >
        <apex:commandButton value="Save" action="{!savePostcode}"/>
 		<apex:commandButton value="Cancel" action="{!Cancel}"/>
    </apex:pageBlockButtons> 
<apex:pageBlockSection title="Other Address" columns="1" rendered="{!Billing1Result}">
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Other Street"/>
        <apex:inputTextArea rows="3" value="{!result.BillingStreet}"/>
    </apex:pageBlockSectionItem>
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Other City"/>
        <apex:inputText value="{!result.BillingCity}"/>
    </apex:pageBlockSectionItem>
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Other Postal Code"/>
        <apex:inputText value="{!result.BillingPostalCode}"/>
    </apex:pageBlockSectionItem>
</apex:pageBlockSection>

<apex:pageBlockSection title="Mailing Address" columns="1" rendered="{!Shipping1Result}">
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Mailing Street"/>
        <apex:inputTextArea rows="3" value="{!result.ShippingStreet}"/>
    </apex:pageBlockSectionItem>
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Mailing City"/>
        <apex:inputText value="{!result.ShippingCity}"/>
    </apex:pageBlockSectionItem>
    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Mailing Postal Code"/>
        <apex:inputText value="{!result.ShippingPostalCode}"/>
    </apex:pageBlockSectionItem>
</apex:pageBlockSection>

<apex:pageBlockSection title="Multiple Mailing Address Results" rendered="{!ShippingMultiResults}" columns="1">
<apex:pageBlockTable value="{!resultSetShipping}" var="row">
	<apex:column >
		<input type="radio" name="ShippingGroup" value="{!row.Name}" onClick="copyRadioValueShipping('{!row.Name}')" checked="checked"/>
	</apex:column>
	<apex:column >
		<apex:inputTextArea rows="3" value="{!row.ShippingStreet}"/>
	</apex:column>
	<apex:column >
		<apex:inputText value="{!row.ShippingCity}"/>
	</apex:column>
	<apex:column >
		<apex:inputText value="{!row.ShippingPostalCode}"/>
	</apex:column>
</apex:pageBlockTable>
</apex:pageBlockSection>

<apex:pageBlockSection title="Multiple Other Address Results" rendered="{!BillingMultiResults}" columns="1">
<apex:pageBlockTable value="{!resultSetBilling}" var="row">
	<apex:column >
		<input type="radio" name="BillingGroup" value="{!row.Name}" onClick="copyRadioValueBilling('{!row.Name}')" checked="checked" />
	</apex:column>
	<apex:column >
		<apex:inputTextArea rows="3" value="{!row.BillingStreet}"/>
	</apex:column>
	<apex:column >
		<apex:inputText value="{!row.BillingCity}"/>
	</apex:column>
	<apex:column >
		<apex:inputText value="{!row.BillingPostalCode}"/>
	</apex:column>
</apex:pageBlockTable>
</apex:pageBlockSection>

<apex:pageBlockSection title="No Mailing Address Results" rendered="{!ShippingNoResult}">
	<apex:pageMessage severity="confirm" title="No results were found"/>
</apex:pageBlockSection>

<apex:pageBlockSection title="No Other Address Results" rendered="{!BillingNoResult}">
	<apex:pageMessage severity="confirm" title="No results were found"/>
</apex:pageBlockSection>



</apex:pageBlock>
<apex:pageBlock rendered="{!hasErrors}" title="Errors">
<apex:repeat value="{!errorList}" var="x">
	<apex:pageMessage severity="Error" summary="{!x}"/>
</apex:repeat>
	<apex:PageMessage severity="Confirm" title="Tips:" summary="For PO Box / Private Bag addresses make sure the box/bag number is all one number - no spaces or hythens. For street addresses, the process is looking for the street number to be first. Unfortunately an address like 'Level 4, 1 Example Road' will cause an error"/>
</apex:pageBlock>
</apex:form>

</apex:page>