<apex:page >
	<style type="text/css">
		/* Prevent the text contents of draggable elements from being selectable. */
		*[draggable=true] {
			cursor: move;
			-khtml-user-drag: element;
			user-select: none;
			-moz-user-select:none;
			-moz-user-select: none;
			-khtml-user-select: none;
			-webkit-user-select: none;
		}
		*:-khtml-drag {
			background-color: rgba(238,238,238, 0.5);
		}
		.cell {
			float: left;
			text-align: center;
		}
		.container {
			width: 99%;
		}
		div.hoverActive {
			background: grey;
		}
		.dropArea {
			background-color: #E0E0E0;
			border-radius: 3px;
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			margin: 2px;
			min-height: 74px;
			overflow: hidden;
			padding-left: 1px;
			padding-right: 1px;
			padding-bottom: 1px;
			width: 24%;
		}
		.headerCell {
			width: 100%;
		}
		.headerRow {
			background-color: light-grey;
			clear: left;
			width: 100%;
		}
		#headerStatuses {
			overflow: auto;
			width: 90%;
		}
		#headerWork {
			width: 10%;
		}
		.hidden {
			display: none;
		}
		.row {
			border: 2px solid #666666;
			border-radius: 10px;
			Xbackground-color: #0066CC;
			clear: left;
			margin: 1px;
			min-height: 60px;
			overflow-x: hidden;
			overflow-y: auto;
			padding: 2px;
		}
		.taskStatuses {
			overflow: hidden;
			width: 90%;
		}
		.taskInfo {
			width: 10%;
		}
		.taskTitle {
			height: 75%;
			overflow: hidden;
		}
		.taskOwner {
			float: left;
		}
		.taskLink {
			float: left;
			font-size: x-small;
		}
		.taskRemainingHours {
			float: right;
		}
		.task {
			background-color: white;
			border: 2px solid #666666;
			border-radius: 3px;
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			box-shadow: inset 0 0 3px #000;
			-webkit-box-shadow: inset 0 0 3px #000;
			cursor: move;
			float: left;
			font-size: small;
			margin: 1px;
			text-align: center;
			overflow: hidden;
			padding: 2px;
			width: 45%;
			z-index: 3;
		}
		.taskActive {
			box-shadow: 10px 10px 5px #888888;
			-webkit-box-shadow: 10px 10px 5px #888888; /* Safari */
			transform: rotate(3deg);
			-ms-transform: rotate(3deg); /* IE 9 */
			-webkit-transform: rotate(3deg); /* Safari and Chrome */
			-o-transform: rotate(3deg); /* Opera */
			-moz-transform: rotate(3deg); /* Firefox */
			z-index: 1000;
		}
	</style>
</apex:page>